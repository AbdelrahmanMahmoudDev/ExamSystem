@model LoginViewModel;


<div class="container d-flex justify-content-center align-items-center">
	<div class="tab-content">
		<div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
			<form method="post" asp-controller="Account" asp-action="SaveLogin">
				@Html.AntiForgeryToken()
				<!-- Username input -->
				<div data-mdb-input-init class="form-outline mb-4">
					<input asp-for="UserName" type="text" class="form-control" />
					<label asp-for="UserName" class="form-label">Username *</label>
					<span asp-validation-for="UserName" style="color: red;"></span>
				</div>

				<!-- Password input -->
				<div data-mdb-input-init class="form-outline mb-4">
					<input asp-for="Password" type="password" class="form-control" />
					<label asp-for="Password" class="form-label" for="loginPassword">Password *</label>
					<span asp-validation-for="Password" style="color: red;"></span>
				</div>

				<!-- 2 column grid layout -->
				<div class="row mb-4">
					<div class="col-md-6 d-flex justify-content-center">
						<!-- Checkbox -->
						<div class="form-check mb-3 mb-md-0">
							<input asp-for="IsRememberMe" class="form-check-input" type="checkbox" />
							<label asp-for="IsRememberMe" class="form-check-label"> Remember me </label>
						</div>
					</div>
				</div>

				<!-- Submit button -->
				<button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Sign in</button>

				<div class="text-center">
					<p> <a asp-controller="Account" asp-action="Index">Sign Up</a></p>
				</div>
			</form>
			</div>
	</div>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}